<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/list_heading"
        style="@style/listHeading"
        tools:text="event Title" />

    <ImageView
        android:id="@+id/image"
        style="@style/image"
        android:layout_below="@id/list_heading"
        tools:src="@drawable/e17logo300" />

    <RelativeLayout
        android:id="@+id/eventListing"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/list_heading"
        android:layout_toRightOf="@id/image"
        android:orientation="vertical">

        <TextView
            android:id="@+id/date"
            style="@style/listTextRed"
            tools:text="day, date and time" />

        <TextView
            android:id="@+id/address"
            style="@style/listTextBold"
            android:layout_below="@id/date"
            tools:text="event address" />

        <TextView
            android:id="@+id/description"
            style="@style/listText"
            android:layout_below="@id/address"
            tools:text="event description" />

    </RelativeLayout>

</RelativeLayout>